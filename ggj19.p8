pico-8 cartridge // http://www.pico-8.com
version 16
__lua__

local left_btn = 0
local right_btn = 1
local up_btn = 2
local down_btn = 3
local A_btn = 4
local B_btn = 5

local player

function make_player()
  local player = {
    x = 64,
    y = 64,
    vx = 2,
    vy = 2,
    color = 6
  }
  return player
end

function _init()
  player = make_player()
end

function _update()
  if btn(right_btn) then
    player.x += player.vx
  end
  if btn(left_btn) then
    player.x -= player.vx
  end
  if btn(down_btn) then
    player.y += player.vy
  end
  if btn(up_btn) then
    player.y -= player.vy
  end
  if btn(A_btn) then
    player.color = 6
  end
  if btn(B_btn) then
    player.color = 9
  end
end

function _draw()
cls() -- Clears the screen
circfill(player.x, player.y, 6, player.color)
end

